<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="AppTheme">

        <item name="android:windowBackground">@drawable/bg</item>
        <!--  <item name="android:windowContentOverlay">@null</item>-->
        <!--          <item name="android:windowDisablePreview">true</item>-->
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">#00000000</item>
        <item name="colorPrimaryDark">#00000000</item>
        <item name="colorAccent">#00000000</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="txt_menu_big">
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
        <declare-styleable name="RoundImageView">
            <attr name="radius" format="dimension"/>
            <attr name="leftTopRadius" format="dimension"/>
            <attr name="rightTopRadius" format="dimension"/>
            <attr name="leftBottomRadius" format="dimension"/>
            <attr name="rightBottomRadius" format="dimension"/>
        </declare-styleable>


    <declare-styleable name="MediumBoldTextView">
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <style name="baseEditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/base_color_cursor</item>
    </style>

    <style name="baseEditTextBG">
        <item name="android:background">@null</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/base_color_cursor</item>
    </style>

    <style name="baseNoOnClickEditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:textSize">14sp</item>
        <item name="android:enabled">false</item>
    </style>

        <declare-styleable name="VerticalTextView">
            <attr name="textColor" format="color|reference"/>
            <attr name="hintColor" format="color|reference"/>
            <attr name="textSize" format="dimension|reference"/>
            <attr name="text" format="string|reference"/>
            <attr name="hint" format="string|reference"/>
            <attr name="lineSpace" format="dimension|reference"/>
            <attr name="wordSpace" format="dimension|reference"/>
            <attr name="gravity">
                <!-- 文字从左至右排版 -->
                <flag name="l2r" value="0" />
                <!-- 文字从右至左排版 -->
                <flag name="r2l" value="1" />
            </attr>
            <!-- 固定文字个数 -->
            <attr name="fixSize" format="integer"/>
            <!-- 字体 -->
            <attr name="typeface" format="string"/>
            <!-- 是否去掉字体自带的内边距 -->
            <attr name="includeFontPadding" format="boolean"/>
        </declare-styleable>
</resources>