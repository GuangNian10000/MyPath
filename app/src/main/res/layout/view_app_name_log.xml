<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.my.path.viewmodel.state.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.my.path.app.weight.customview.RoundImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:leftTopRadius="15dp"
            app:rightTopRadius="15dp"
            app:leftBottomRadius="15dp"
            app:rightBottomRadius="15dp"
            android:src="@mipmap/ic_launcher"/>

        <com.my.path.app.weight.textview.MediumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#333333"
            android:layout_marginTop="14dp"
            android:text="@string/app_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="12dp"
            android:text="@string/app_name"/>
    </LinearLayout>
</layout>

