<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.my.path.viewmodel.state.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lihang.ShadowLayout
            android:id="@+id/ShadowLayout"
            android:clickable="false"
            android:longClickable="false"
            app:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hl_cornerRadius="16dp"
            app:hl_shadowColor="@color/home_yiny"
            app:hl_shadowLimit="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/kuaiqucchuangdjiawne"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginTop="72dp"
                    android:layout_marginBottom="93dp"
                    android:src="@drawable/ic_home_writing_bianjinull"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_login_bt_on"
                    android:gravity="center"
                    android:text="@string/kaishichuangzuo"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.lihang.ShadowLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

